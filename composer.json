{
    "name": "andrey-tech/phpunit-cobertura-formatter-php",
    "description": "Tool to show code coverage metrics, measured by PHP Unit in Cobertura format, in console and CI/CD pipeline",
    "keywords": [
        "test",
        "phpunit",
        "metrics",
        "coverage",
        "cobertura",
        "ccn",
        "crap",
        "console"
    ],
    "homepage": "https://github.com/andrey-tech/phpunit-cobertura-formatter-php",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "andrey-tech",
            "homepage": "https://github.com/andrey-tech/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/andrey-tech/phpunit-cobertura-formatter-php/issues",
        "source": "https://github.com/andrey-tech/phpunit-cobertura-formatter-php"
    },
    "require": {
        "php": "^8.3",
        "ext-simplexml": "*",
        "justinrainbow/json-schema": "^6.4",
        "symfony/console": "^5.4 || ^6.4 || ^7.3",
        "symfony/yaml": "^5.4 || ^6.4 || ^7.3"
    },
    "require-dev": {
        "andrey-tech/pdepend-summary-formatter-php": "^1.2.2",
        "dg/bypass-finals": "^1.9",
        "overtrue/phplint": "^9.6.2",
        "pdepend/pdepend": "^2.16.2",
        "phpmd/phpmd": "^2.15",
        "phpunit/phpunit": "^12.3.8",
        "slevomat/coding-standard": "^8.22",
        "squizlabs/php_codesniffer": "^3.13.4",
        "symfony/process": "^5.4 || ^6.4 || ^7.3",
        "vimeo/psalm": "^6.13.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "AndreyTech\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "bin": [
        "bin/phpunit-cobertura-formatter"
    ],
    "scripts": {
        "lint": "phplint --configuration=phplint.yml.dist",
        "cs": "phpcs -s -p --report=full --standard=phpcs.xml.dist",
        "psalm": "psalm --long-progress --output-format=compact --config=psalm.xml.dist",
        "phpmd": "phpmd src ansi phpmd.xml.dist --suffixes php --ignore-violations-on-exit",
        "pdepend": "pdepend --summary-xml=.summary.xml --suffix=php src && pdepend-summary-formatter --init && pdepend-summary-formatter .summary.xml --config-file=pdepend-summary-formatter.yml.dist --ignore-yellow-metrics-on-exit",
        "test": "phpunit --configuration=phpunit.xml.dist",
        "check": [
            "@lint",
            "@cs",
            "@psalm",
            "@phpmd",
            "@pdepend",
            "@test"
        ]
    }
}
